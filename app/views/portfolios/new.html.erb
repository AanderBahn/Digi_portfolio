<header>
 <nav class="main-nav">
 <h1 class="screen-title col-md-6 col-md-offset-3">New Portfilio Entry </h1>
 </nav>
</header>
<%= @foo %>

<!-- Responsive panel example -->
<main>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <%= form_for :portfolio, url: portfolios_path do |f| %>

          <!-- Label and input for title-->
          <div class="form-group">
            <%= f.label :new_entry_name , class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, placeholder: "Name of the entry", class: "form-control" %>
            </div>
          </div>
          <br>

          <!-- Label and input for bio -->
          <div class="form-group ">
           <%= f.label :category, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
           <%= f.select :category, [['Historical','historical'],['Theatrical','theatrical'],['Modern','Modern']]%>
          </div>
          </div>
          <br>

          <div class="form-group">
            <%= f.label :description, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description, placeholder: "What it is and what all went into making it.", class: "form-control" %>
            </div>
          </div>
          <br>


          <div class="form-group">
            <div class="text-center">
              <%= f.submit class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</main>
