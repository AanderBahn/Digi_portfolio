<header>
    <nav class="main-nav">
     <h1 class="screen-title col-md-6 col-md-offset-5">Edit Blog</h1>
    </nav>
  </header>

<% if @blog.errors.any? %>
  <% @blog.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<main>
<div class="col-md-6 col-md-offset-3 isotope-item">
<div class="panel panel-default">
<div class="panel-heading">
</div>
<div class="panel-body">
<%= form_for @blog, :html => { :class => "form-horizontal" } do |f| %>

  <!-- Label and input for name -->
  <div class="form-group">
    <%= f.label :edit_blog_title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: "Title of the Blog", class: "form-control" %>
    </div>
  </div>
  <br>

  <!-- Label and input for bio -->
  <div class="form-group">
    <%= f.label :headline, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :headline, placeholder: "Feel of the Blog", :type => "tel", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :blog_body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :blogBody, placeholder: "I'm making cool stuff", :type => "tel", class: "form-control" %>
    </div>
  </div>

  <br>

  <div class="form-group text-center">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
</main>
