<header>
 <nav class="main-nav">
 <h1 class="screen-title col-md-6 col-md-offset-3">Add a new Blog</h1>
 </nav>
</header>


<!-- Responsive panel example -->
<main>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <%= form_for :blog, url: blogs_path do |f| %>

          <!-- Label and input for title-->
          <div class="form-group">
            <%= f.label :new_blog_title , class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title, placeholder: "The Title of the Blog", class: "form-control" %>
            </div>
          </div>
          <br>

          <!-- Label and input for bio -->
          <div class="form-group">
            <%= f.label :headline, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :headline, placeholder: "The Feel of the blog", class: "form-control" %>
            </div>
          </div>
          <br>

          <div class="form-group">
            <%= f.label :blog_body, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :blogBody, placeholder: "I'm making cool stuff", class: "form-control" %>
            </div>
          </div>
          <br>


          <div class="form-group">
            <div class="text-center">
              <%= f.submit class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</main>
